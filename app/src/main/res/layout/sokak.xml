<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     android:id="@+id/lySokak"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/caddeGenel"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        android:src="@drawable/cadde" />
    
    
    <ImageView
        android:id="@+id/caddeSag"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY" 
        android:visibility="invisible"/>
    
    
    <ImageView
        android:id="@+id/CaddeSol"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        android:visibility="invisible" />
    
       
    <ImageView
        android:id="@+id/onay"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        android:visibility="invisible" />
    
         
    <ImageView
        android:id="@+id/anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@anim/anims"
        android:visibility="invisible" />

    <ToggleButton
        android:id="@+id/tggleBtnSokak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textOn="@string/bos" 
        android:textOff="@string/bos"
        android:background="@drawable/videoplay"/>
    
    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtube_sokak"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_margin="12dip"
        android:layout_toLeftOf="@+id/tggleBtnSokak"
        android:visibility="invisible" >

        </com.google.android.youtube.player.YouTubePlayerView>

</RelativeLayout>